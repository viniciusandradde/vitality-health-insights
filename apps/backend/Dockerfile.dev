FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    postgresql-client \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install pnpm
RUN pip install --no-cache-dir pydantic-settings

# Copy requirements
COPY requirements.txt .

# Install Python dependencies (with timeout and retry)
# Install email-validator first to avoid yanked version issues
RUN pip install --no-cache-dir --default-timeout=100 email-validator==2.1.1 && \
    pip install --no-cache-dir --default-timeout=100 -r requirements.txt || \
    (pip install --no-cache-dir --default-timeout=100 --retries 3 email-validator==2.1.1 && \
     pip install --no-cache-dir --default-timeout=100 --retries 3 -r requirements.txt)

# Expose port
EXPOSE 8000

# Default command (can be overridden in docker-compose)
CMD ["uvicorn", "app.main:app", "--reload", "--host", "0.0.0.0", "--port", "8000"]
