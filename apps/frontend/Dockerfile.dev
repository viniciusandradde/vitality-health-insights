FROM node:20-alpine

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm@^10.26.0

# Copy package files
COPY package.json pnpm-lock.yaml* ./

# Install dependencies
RUN pnpm install

# Expose port
EXPOSE 3000

# Default command (can be overridden in docker-compose)
CMD ["pnpm", "dev", "--host", "0.0.0.0", "--port", "3000"]
